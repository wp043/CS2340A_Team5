<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is similar to fragment_new_recipe.xml but now for an Activity -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.EnterNewRecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe Name"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/ingredients_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Ingredients will be added dynamically here -->
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Ingredient"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:id="@+id/instructions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Instructions will be added dynamically here -->
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Instruction"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/submit_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Recipe"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/cancelRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
